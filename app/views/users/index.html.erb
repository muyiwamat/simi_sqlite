<% provide(:title, 'All User Page') %>
    <div class="span9">
        <div class="hero-unit">
		<h1>All Users</h1>
		<ul class="users">
  		<% @users.each do |user| %>
    	 <li><%=user.email%>
         <% if current_user.role == "admin" && !current_user?(:user)%>
         <%= link_to " Delete Account", user, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-small" %>
         <%= link_to " Edit Account", edit_user_path(user), class: "btn btn-small" %>
         <% end %>
         </li>
         <br />
      <% end %>
       </ul>
        </div><!--/row-->
  </div>

