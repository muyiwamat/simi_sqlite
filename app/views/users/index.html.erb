<% provide(:title, 'All User Page') %>
    <div class="span9">
        <div class="hero-unit">
		<h1>All Users</h1>

		<ul class="users">
  		<% @users.each do |user| %>
    	 <li><%= link_to user.email, user %>
         <% if current_user.admin? && !current_user?(user) %>
           | <%= link_to "delete user", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
         <% end %> 
         </li>
      <% end %>
       </ul>

        </div><!--/row-->
  </div>

