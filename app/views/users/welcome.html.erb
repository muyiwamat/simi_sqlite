<%= provide(:title, 'Welcome') %>  
    <div class="span9">
        <div class="hero-unit">
			<h1>Welcome to Aberdeen Search</h1>
				<br />
				<br />
			<div id="search_bar">
				<%= form_tag("/search", :method => "get") do %>
				<%= label_tag(:search, "Your Post Code?") %>
				<%= text_field_tag(:search, nil, placeholder: "E.g. AB24 1WU") %>
				<%= submit_tag("Search", class: 'btn btn-primary btn-large') %>
				<% end %>
			</div><!--/span3--> 
        </div><!--/row-->
  	</div>
