<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header"></li>
	<%= form_for(:session, url: sessions_path) do |f| %>
		<%#= render 'shared/error_messages' %> <!-- WHAT FOR -->
		<%= f.label :email %>
		<%= f.text_field :email %> <br />
		<%= f.label :password %>
		<%= f.password_field :password %><br />
		<%= f.submit "Log In", class: "btn" %>
	<% end %>
<p>Don't have an account? <br /><br /> <%= link_to "Create one now!", signup_path, class: "btn" %></p>
    </ul>
    <br />
    <%= form_tag("/search", :method => "get") do %>
    <%= label_tag(:search, "Your Post Code?") %>
    <%= text_field_tag(:search, nil, placeholder: "E.g. AB24 1WU") %>
    <%= submit_tag("Search") %>
    <% end %>
  </div><!--/.well -->
    <%= debug(params) if Rails.env.development? %>
</div><!--/span3--> 

